{% extends 'base.html.twig' %}

{% block title %}Hello {{line.name}} ðŸ‡¨ðŸ‡­!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <a class="link" href="{{path('lines')}}"><h1>Hello {{line.name}} ðŸ‡¨ðŸ‡­!</h1></a>

    <div class="difficultyRow">
        {% for difficulty in line.difficulties %}
            <div class="difficulty">
                <p style="color: {{difficulty.color}}; font-size: 14px;">{{difficulty.name}}</p>
            </div>
        {% endfor %}
    </div>

    <table class="table table-hover">
        <tbody>
            {% for feedback in line.feedbacks %}
                <tr>
                    <th scope="row">
                        <td style="width: 25%">
                            <p>{{ feedback.date|date('d F Y') }}</p>
                        </td>
                        <td style="width: 5%">
                            <p>{{ feedback.rate }}</p>
                        </td>
                        <td style="width: 67%">
                            <p>{{ feedback.comment }}</p>
                        </td>

                        {% if is_granted('ROLE_ADMIN') %}
                            <td style="width: 3%">
                                <button data-path="{{url('feedback_delete', {id: feedback.id}, false)}}" class="btn btn-danger feedbackDelete">x</button>
                            </td>
                        {% endif %}
                    </th>
                </tr>

            {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_USER') %}
        {{form(form)}}
    {% endif %}


</div>

{% endblock %}
