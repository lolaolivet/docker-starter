{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! üßóüèª‚Äç‚ôÄÔ∏è</h1>

    <div data-controller="hello"></div>

<div>
<table class="table-hover">
  <tbody>
   {% for line in lines %}
            <th scope="row">
                <td>
                    <a class="link" href="{{path('line_show', {id: line.id})}}">{{ line.name }}</a>
                </td>
                <td class="difficultyRow">
